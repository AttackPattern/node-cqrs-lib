{
  "OUTPUT_DEL": [
    "./coverage/**/*"
  ],
  "OUTPUT_SCRIPTS": "./lib",

  "SRC_GULPFILE": "./gulpfile.babel.js",
  "SRC_SCRIPTS": "./src/**/*.js",
  "BABEL": {
    "plugins": [
      "transform-es2015-destructuring",
      "transform-runtime"
    ],
    "presets": ["es2017"]
  },

  "TST_UNIT": "./tests/**/*.js",
  "MOCHA": {
    "reporter": "spec"
  },
  "ISTANBUL": {
    "INIT": {
      "includeUntested": true
    },
    "WRITE": {
      "dir": "./coverage",
      "reportOpts": {
        "dir": "./coverage"
      }
    }
  }
}
